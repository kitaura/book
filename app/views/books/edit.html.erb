<h1>Editing book</h1>

<%= error_messages_for :book %>

<% form_for(@book) do |f| %>
  <p>
    <b>Name</b><br />
    <%= f.text_field :name %>
  </p>

  <p>
    <b>Isbn</b><br />
    <%= f.text_field :isbn %>
  </p>

  <p>
    <b>Author</b><br />
    <%= f.text_field :author %>
  </p>
  <p>
    <b>Owner</b><br />
    <%= select( "owner", "owner_id", owners_select) %>
  </p>

  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'Show', @book %> |
<%= link_to 'Back', books_path %>
